#ifndef _CUDA_STD_OPTIONAL
#define _CUDA_STD_OPTIONAL

#include <cuda/std/detail/__config>

#if defined(_CCCL_IMPLICIT_SYSTEM_HEADER_GCC)
#  pragma GCC system_header
#elif defined(_CCCL_IMPLICIT_SYSTEM_HEADER_CLANG)
#  pragma clang system_header
#elif defined(_CCCL_IMPLICIT_SYSTEM_HEADER_MSVC)
#  pragma system_header
#endif // no system header

#include <cuda/std/__optional/bad_optional_access.h>
#include <cuda/std/__optional/hash.h>
#include <cuda/std/__optional/make_optional.h>
#include <cuda/std/__optional/nullopt.h>
#include <cuda/std/__optional/optional.h>
#include <cuda/std/__optional/optional_base.h>
#include <cuda/std/__optional/optional_ref.h>

#endif // _CUDA_STD_OPTIONAL
