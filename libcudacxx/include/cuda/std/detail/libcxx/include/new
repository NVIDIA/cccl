// feature.
struct destroying_delete_t {
  explicit destroying_delete_t() = default;
};
_LIBCUDACXX_INLINE_VAR constexpr destroying_delete_t destroying_delete{};
#endif // _LIBCUDACXX_STD_VER > 17

