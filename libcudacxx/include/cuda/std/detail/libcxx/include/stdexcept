#endif // !_LIBCUDACXX_NO_EXCEPTIONS
}

_CCCL_NORETURN inline _LIBCUDACXX_INLINE_VISIBILITY void __throw_length_error(const char* __msg)
{
#ifndef _LIBCUDACXX_NO_EXCEPTIONS
