#ifndef _CUDA_CMATH
#define _CUDA_CMATH

#include <cuda/std/cmath>

_LIBCUDACXX_BEGIN_NAMESPACE_CUDA

template <typename __T>
__host__ __device__ constexpr size_t ceil_div(__T __a, __T __b)
{
  return (__a + __b - __T(1)) / __b;
}

_LIBCUDACXX_END_NAMESPACE_CUDA

#endif // _CUDA_CMATH
